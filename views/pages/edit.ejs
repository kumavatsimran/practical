<body class="" id="body">
    <%-include('../partial/header')%>

    <div class="container  text-white">

        <form action="/edit" method="post" class=" border w-50 m-auto p-3  rounded-3" enctype="multipart/form-data">

            <caption><h2>edit Blog</h2></caption>
          
                <label class="form-check-label">name</label>
              <input type="text" class="form-control" name="name" value="<%=blog.name%>">
            
              <label class="form-check-label">Discribtion</label>
              <input type="text" class="form-control" name="Discribtion" value="<%=blog.Discribtion%>">

              
              <label class="form-check-label">date</label>
              <input type="date" class="form-control" name="date" value="<%=blog.date%>">
          
              <label class="form-check-label" >image</label>
              <input type="file" class="form-control" name="image" id="image" value="<%=blog.image%>">
                
  
        <input type="submit" value="submit" class="btn button ">
    </form>    
    </div>
